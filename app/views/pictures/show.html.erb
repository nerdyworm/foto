<p id="notice"><%= notice %></p>

<p>
  <b>Picture:</b>
  <%= image_tag @picture.pic.url(:thumb) %>
</p>

<p>
  <b>Name:</b>
  <%= @picture.name %>
</p>

<p>
  <b>Tags:</b>
  <% @picture.tags.each do |t| %>
    <%= link_to t.name, "/pictures/tags/#{t.name}", :class => "tag" %>
  <% end %>
</p>


<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>

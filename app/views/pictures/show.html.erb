<h1>
  <%= @picture.name %>
  <% if current_user && current_user.can_edit?(@picture) %>
    <%= link_to 'Edit Picture', edit_picture_path(@picture), :class => 'edit' %>
  <% end %>
</h1>
<p class="full">
  <%= image_tag @picture.pic.url(:large) %>
</p>
<div class="tags">
<% @picture.tags.each do |t| %>
  <%= link_to t, "/pictures/tags/#{t}", :class => "tag" %>
<% end %>
</div>

<div id="comments">
  <%- @picture.comments.each do |c| %>
  <div class="comment" id="comment-<%=c.id%>">
    <div class="username">
      <%= gravatar(c.email, 50) %>
      <%= link_to c.username,  username_profile_path(c.username) %>
    </div>
    <div class="content">
      <%= c.comment %>
    </div>
    <div class="created-at">
      Posted <%= time_ago_in_words c.created_at %> ago
    </div>
  </div>
  <% end %>
</div>

<%- if current_user %>
<div id="comment-form">
  <%= form_for :comment, :url => picture_comments_path(@picture) do |f| %>
    <%= f.hidden_field :picture_id, :value => @picture.id %>
    
    <div class="field">
      <label for="comment">Leave feedback</label><br/>
      <%= f.text_area :comment %>
    </div>

    <div class="actions">
      <%= f.submit "Post Comment" %>
    </div>

  <% end %>
</div>
<% else %>
<div id="no-comment-form">
  You must be a member to post feedback.
</div>
<% end %>


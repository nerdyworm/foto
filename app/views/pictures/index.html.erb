<h1>Listing pictures</h1>
<% @pictures.each do |picture| %>
<div class="picture">
  <p class="name">
    <%= picture.name %>
  </p>
  <p class="image">
    <%=image_tag picture.pic(:medium) %>
  </p>
  <p class="tags">
  Tagged With:
  <% picture.tags.split(",").each do |t| %>
    <%= link_to t, "/pictures/tags/#{t.downcase.strip}", :class => "tag" %>
  <% end %>
  </p>

<% end %>

<%= link_to 'New Picture', new_picture_path %>

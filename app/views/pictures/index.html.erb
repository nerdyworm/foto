<h1>Listing pictures</h1>

<div id="pictures">
<% @pictures.each_with_index do |picture, i| %>
  <div class="picture <%= cycle('odd', 'even')%>">
    <h2 class="name">
      <%= picture.name %>
      <span class="username">
        <%= link_to picture.user.username, username_profile_path(picture.user.username) %>
      </span>
    </h2>
    <span class="image">
      <%=link_to image_tag(picture.pic(:medium)), picture_path(picture) %>
    </span>
    <span class="tags">
      <% picture.tags.each do |t| %>
        <%= link_to t.name, "/pictures/tags/#{t.name}", :class => "tag" %>
      <% end %>
    </span>
  </div>
<% end %>
</div>
<br style="clear: both"/>
<% if @pictures.size == 6 %>
<div class="next">
  <a href="?page=<%= params[:page] ? params[:page].to_i + 1 : 1%>"> more </a>
</div>
<% end %>

<%= link_to 'New Picture', new_picture_path %>

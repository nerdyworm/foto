<h1>Listing pictures</h1>

<div id="pictures">
<% @pictures.each_with_index do |picture, i| %>
  <div class="picture <%= cycle('odd', 'even')%>">
    <h2 class="name">
      <%= picture.name %>
      <% unless picture.username.nil? %>
      <span class="username">
        <%= link_to picture.username, username_profile_path(picture.username) %>
      </span>
      <% end %>
    </h2>
    <span class="image">
    <% if picture.pic.medium.url %>
      <%=link_to image_tag(picture.pic.medium.url), picture_path(picture) %>
    <% end %>
    </span>
    <span class="tags">
      <% picture.tags.each do |t| %>
        <%= link_to t, "/pictures/tags/#{t}", :class => "tag" %>
      <% end %>
    </span>
  </div>
<% end %>
</div>

<br style="clear: both"/>
<% if @pictures.size == 6 %>
<div class="next">
  <a href="?page=<%= params[:page] ? params[:page].to_i + 1 : 1%>"> more </a>
</div>
<% end %>

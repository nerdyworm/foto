<h1>Listing pictures</h1>
<% @pictures.each do |picture| %>
<div class="picture">
  <h2 class="name">
    <%= picture.name %>
  </h2>
  <p class="username">
      <%= picture.user.username %>
  </p>
  <p class="image">
    <%=image_tag picture.pic(:medium) %>
  </p>
  <p class="tags">
    Tagged With:
    <% picture.tags.each do |t| %>
      <%= link_to t.name, "/pictures/tags/#{t.name}", :class => "tag" %>
    <% end %>
  </p>
<% end %>
<%= link_to 'New Picture', new_picture_path %>

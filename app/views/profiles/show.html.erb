<h1> <%= @profile.user.username %>'s Profile </h1>
<p class="pictures">
<% @profile.user.pictures.each do |p| %>
  <div class="picture">
    <p class="name">
      <%= p.name %>
    </p>
    <%= link_to image_tag(p.pic(:thumb)), p %>
    <p class="private">
      Private? <%= p.private ? "yes" : "no" %>
    </p>
  </div>
<% end %>
</p>

<% if current_user %>
<%= link_to 'Edit', edit_user_profile_path %> |
<%= link_to 'Back', user_profile_path %>
<% end %>

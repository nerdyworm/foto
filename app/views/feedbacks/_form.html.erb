<%- if current_user %>
  
<div id="comment-form">
  <%= form_for :feedback, :url => picture_feedbacks_path(picture) do |f| %>
    <%= f.hidden_field :picture_id, :value => picture.id %>
    
    <div class="field">
      <label for="comment">Leave feedback</label><br/>
      <%= f.text_area :comment, :cols => 80, :rows => 8 %>
    </div>

    <div class="actions">
      <%= f.submit "Post Feedback" %>
    </div>

  <% end %>
</div>

<% else %>

<div id="no-comment-form">
  You must be a member to post feedback.
</div>

<% end %>

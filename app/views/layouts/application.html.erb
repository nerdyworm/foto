<!DOCTYPE html>
<html>
<head>
  <title>notebookdrawings.com</title>
  <%= stylesheet_link_tag "screen" %>
  <%= javascript_include_tag "jquery.min", "rails", "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <div class="container">
      <div id="logo">
      	<h1><%= link_to "Notebook Drawings", root_path %></h1>
      </div>
      <div id="nav">
        <%= link_to "Home", root_path %>
        <%= link_to "Pictures", pictures_path %>
        <%= link_to "About", new_user_registration_path %>
        <% if current_user %>
        <%= link_to "Upload", new_picture_path %>
        <%= link_to "Sign out", destroy_user_session_path %>
        <a href="<%=user_profile_path%>" class="user-profile-link">
          <%= current_user.username %>
          <%= gravatar(current_user.email, 14) %>
        </a>
        <% else %>
        <%= link_to "Sign up", new_user_registration_path %>
        <%= link_to "Sign in", new_user_session_path %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <!--
    <% if flash[:alert] %>
    <div id="alert">
      <%= flash[:alert] %>
    </div>
    <% end %>
    -->
    <%= yield %>
    
  </div>
</body>
</html>
